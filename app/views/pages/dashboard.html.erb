<%= render 'shared/navbar' %>

<div class="container">

<div class="btn-dashboard" >
<%= link_to "My infections", infections_path, id: "btn-1" %>
<%= link_to "My organisms", dashboard_path, id: "btn-2" %>
</div>

  <div class="mt-2 ml-10" id="organisms">
  <br><br>
  <h5 class="mt-2 ml-10" style="text-align: center">These are your organisms</h5>
  <br>
<div class="cards-grid">
<% @organisms.each do |organism| %>

        <% if organism.species == "pet" %>

          <div class="card-container card-list pet d-flex my-organisms"> <%#=image_tag "organisms/pet_1.png" %>

            <div class="card-left d-flex flex-column justify-content-between p-4">
              <i class="fas fa-signature"></i>
              <i class="fas fa-info"></i>
              <i class="fas fa-thermometer-half"></i>
            </div>

            <div class="card-center flex-grow-1 d-flex flex-column justify-content-between p-4">
              <h2> <%= organism.name %> <%= organism.age %> Y OLD </strong></h2>
              <h1> <%= organism.species.capitalize %></h1>
              <h2><%= organism.body_temperature %> °C</strong></h2>
            </div>

            <div class="card-right w-50 d-flex justify-content-around align-items-center">
              <i class="fas fa-cat" style="font-size: 110px;"></i></i>
            </div>

          </div>

        <% elsif organism.species == "human" %>

          <div class="card-container card-list human d-flex my-organisms"> <%#=image_tag "organisms/pet_1.png" %>

            <div class="card-left d-flex flex-column justify-content-between p-4">
              <i class="fas fa-signature"></i>
              <i class="fas fa-info"></i>
              <i class="fas fa-thermometer-half"></i>
            </div>

            <div class="card-center flex-grow-1 d-flex flex-column justify-content-between p-4">
              <h2> <%= organism.name %> <%= organism.age %> Y OLD </strong></h2>
              <h1> <%= organism.species.capitalize %></h1>
              <h2><%= organism.body_temperature %> °C</strong></h2>
            </div>

            <div class="card-right w-50 d-flex justify-content-around align-items-center">
              <i class="fas fa-walking" style="font-size: 100px;"></i></i>
            </div>

          </div>

        <% else %>

          <div class="card-container card-list plant d-flex my-organisms"> <%#=image_tag "organisms/pet_1.png" %>

            <div class="card-left d-flex flex-column justify-content-between p-4">
              <i class="fas fa-signature"></i>
              <i class="fas fa-info"></i>
              <i class="fas fa-thermometer-half"></i>
            </div>

            <div class="card-center flex-grow-1 d-flex flex-column justify-content-between p-4">
              <h2> <%= organism.name %> <%= organism.age %> Y OLD </strong></h2>
              <h1> <%= organism.species.capitalize %></h1>
              <h2><%= organism.body_temperature %> °C</strong></h2>
            </div>

            <div class="card-right w-50 d-flex justify-content-around align-items-center">
              <i class="fab fa-pagelines" style="font-size: 120px;"></i></i>
            </div>
          </div>
        <% end %>
        <% end %>
      </div>
</div>
