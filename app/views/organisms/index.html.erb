
<%= render 'shared/navbar' %>
<%= render "shared/searchbar_organisms" %>


      <% if @organisms.empty? %>
        <h5 class="mt-2 ml-5 title">No organisms found! <br> Try with another search input :)</h5>
      <% else %>
        <h5 class="mt-2 ml-5 title">We have found <%= @organisms.size %> organism<%= 's' unless @organisms.size == 1%> for you, VIRUS</h5>
      <% end %>

  <% unless @organisms.blank? %>


     <div class="container">


       <div class="row">

           <div class="col-7">

              <% @organisms.each do |organism| %>
                <% if organism.species == "pet" %>

                        <div class="card-container card-list pet d-flex "> <%#=image_tag "organisms/pet_1.png" %>
                        <div class="card-left d-flex flex-column justify-content-between p-4">
                          <i class="fas fa-signature"></i>
                          <i class="fas fa-info"></i>
                          <i class="fas fa-thermometer-half"></i>
                        </div>

                        <div class="card-center flex-grow-1 d-flex flex-column justify-content-between p-4">
                          <h2> <%= organism.name %> age: <strong><%= organism.age %> Y OLD </strong></h2>
                          <h1> <%= organism.species.capitalize %></h1>
                          <h2> Temperature: <strong><%= organism.body_temperature %> °C</strong></h2>
                        </div>
                        <div class="card-right w-50 d-flex justify-content-around align-items-center">
                          <i class="fas fa-kiwi-bird" style="font-size: 90px;"></i><i class="far fa-heart"></i>
                          <%= link_to 'see', organism_path(organism), class: "btn btn-primary" %>
                        </div>
                        </div>

                <% elsif organism.species == "human" %>

                       <div class="card-container card-list human d-flex "> <%#=image_tag "organisms/pet_1.png" %>
                        <div class="card-left d-flex flex-column justify-content-between p-4">
                          <i class="fas fa-signature"></i>
                          <i class="fas fa-info"></i>
                          <i class="fas fa-thermometer-half"></i>
                        </div>

                        <div class="card-center flex-grow-1 d-flex flex-column justify-content-between p-4">
                          <h2> <%= organism.name %> age: <strong><%= organism.age %> Y OLD </strong></h2>
                          <h1> <%= organism.species.capitalize %></h1>
                          <h2> Temperature: <strong><%= organism.body_temperature %> °C</strong></h2>
                        </div>
                        <div class="card-right w-50 d-flex justify-content-around align-items-center">
                          <i class="fas fa-walking" style="font-size: 100px;"></i><i class="far fa-heart"></i>
                          <%= link_to 'see', organism_path(organism), class: "btn btn-primary" %>
                        </div>

                        </div>

                  <% else %>

                     <div class="card-container card-list plant d-flex "> <%#=image_tag "organisms/pet_1.png" %>
                        <div class="card-left d-flex flex-column justify-content-between p-4">
                          <i class="fas fa-signature"></i>
                          <i class="fas fa-info"></i>
                          <i class="fas fa-thermometer-half"></i>
                        </div>

                        <div class="card-center flex-grow-1 d-flex flex-column justify-content-between p-4">
                          <h2> <%= organism.name %> age: <strong><%= organism.age %> Y OLD </strong></h2>
                          <h1> <%= organism.species.capitalize %></h1>
                          <h2> Temperature: <strong><%= organism.body_temperature %> °C</strong></h2>
                        </div>
                        <div class="card-right w-50 d-flex justify-content-around align-items-center">
                          <i class="fab fa-pagelines" style="font-size: 120px;"></i><i class="far fa-heart"></i>
                          <%= link_to 'see', organism_path(organism), class: "btn btn-primary" %>
                        </div>

                        </div>
                    <% end %>
                  <% end %>
          <% end %>
        </div>


      <div class="col-5">

      <div id="map"
           style="width:100%; height: 100%;"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

           </div>
      </div>

  </div>
</div>


